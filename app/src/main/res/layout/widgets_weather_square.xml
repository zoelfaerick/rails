<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:id="@+id/widget_layout_square"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:background="@drawable/widget_1_background_round">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="0dp"
        >

        <ImageView
            android:id="@+id/weather_icon_square"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/cloudy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:id="@+id/weather_condition_square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/product_sans"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Clear "
                android:textColor="@color/colorPrimary"
                android:textSize="15.5sp"
                android:ellipsize="end"
                android:maxWidth="280dp"
                android:maxLines="1" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingTop="0dp"
        android:paddingRight="8dp"
        android:paddingBottom="0dp">

        <TextView
            android:id="@+id/temp_text_square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans"
            android:text="--°"
            android:textColor="@color/colorPrimary"
            android:textSize="45sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="0dp">


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        >

        <TextView
            android:id="@+id/high_temp_text_square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/product_sans"
            android:text="--°"
            android:textColor="@color/colorOnBackground"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>
