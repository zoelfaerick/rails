<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:background="@android:color/transparent">

    <!-- Top section with app icon and app name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- App icon -->
        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_gravity="center_vertical" />

        <!-- App name -->
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather Master"
            android:textSize="12sp"
             android:textColor="#c0c0c0"
        android:paddingStart="0dp"
        android:gravity="center_vertical" />

        <TextView
            android:id="@+id/condition_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunny"
            android:textSize="15sp"
            android:layout_marginRight="16dp"
            android:textColor="@android:color/white"
            android:gravity="end"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Bottom section with temperature, condition, and weather icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Temperature on the left with margin to move it to the right -->
        <TextView
            android:id="@+id/temp_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="25Â°"
            android:textColor="@android:color/white"
            android:textSize="30sp" />


        <!-- Weather icon on the right -->
        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="0dp"
            android:padding="2dp"
            android:layout_height="45dp"
            android:src="@drawable/showers_rain"
            android:layout_marginRight="16dp"
            android:gravity="end"
            android:layout_weight="0.2" />
    </LinearLayout>

</LinearLayout>
